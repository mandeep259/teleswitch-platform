<include>

  <!-- Core Domain -->
  <X-PRE-PROCESS cmd="set" data="domain=$${local_ip_v4}"/>

  <!-- Bind Server -->
  <X-PRE-PROCESS cmd="set" data="bind_server_ip=0.0.0.0"/>

  <!-- External IPs (FROM DOCKER ENV) -->
  <X-PRE-PROCESS cmd="set" data="external_sip_ip=$${ENV:EXTERNAL_SIP_IP}"/>
  <X-PRE-PROCESS cmd="set" data="external_rtp_ip=$${ENV:EXTERNAL_RTP_IP}"/>

  <!-- RTP Ports -->
  <X-PRE-PROCESS cmd="set" data="rtp_start_port=$${ENV:RTP_START_PORT}"/>
  <X-PRE-PROCESS cmd="set" data="rtp_end_port=$${ENV:RTP_END_PORT}"/>

  <!-- SIP Ports -->
  <X-PRE-PROCESS cmd="set" data="internal_sip_port=5060"/>
  <X-PRE-PROCESS cmd="set" data="external_sip_port=5080"/>

  <!-- Session Limits -->
  <X-PRE-PROCESS cmd="set" data="max_sessions=$${ENV:MAX_SESSIONS}"/>
  <X-PRE-PROCESS cmd="set" data="session_rate=$${ENV:SESSION_RATE}"/>

  <!-- Codecs -->
  <X-PRE-PROCESS cmd="set" data="global_codec_prefs=OPUS,G722,PCMU,PCMA"/>
  <X-PRE-PROCESS cmd="set" data="outbound_codec_prefs=OPUS,G722,PCMU,PCMA"/>

</include>
